{
  "version": 2,
  "projects": {
    "backend": {
      "src": "backend",
      "use": "@vercel/node",
      "config": {
        "includeFiles": [
          "backend/**/*"
        ]
      }
    },
    "frontend": {
      "src": "frontend",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "frontend/dist"
      }
    }
  },
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "backend/server.js"  
    },
    {
      "src": "/(.*)",
      "dest": "frontend/$1"
    }
  ]
}
